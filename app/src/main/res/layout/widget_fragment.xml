<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/widgetLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="Arsenal"
                android:id="@+id/homeTeamNameWigdet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/extraSmallTextSize"
                android:lines="2"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/textWithIconMargin"
                android:layout_marginStart="@dimen/textWithIconMargin"
                android:gravity="center|start" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:text="3"
                    android:id="@+id/homeTeamScoreWigdet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/matchStatusWigdet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:lines="1"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerInParent="true"
                    android:layout_above="@id/matchError"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:text="1"
                    android:id="@+id/awayTeamScoreWigdet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:text="Machester City"
                android:id="@+id/awayTeamNameWigdet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/extraSmallTextSize"
                android:lines="2"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/textWithIconMargin"
                android:layout_marginEnd="@dimen/textWithIconMargin"
                android:gravity="center|end"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
