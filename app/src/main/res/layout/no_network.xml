<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/mainSwipeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/offline_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="Unable to get data, Please check your connection"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/mediumTextSize"/>

    <ImageView
        android:id="@+id/offline_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_cloud_off_black_36dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/offline_message"
        android:layout_marginTop="@dimen/mediumTextSize"/>

</RelativeLayout>
